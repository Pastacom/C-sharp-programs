<Window x:Class="Task03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Button x:Name="button" Content="Поймай меня!" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Height="80" Width="170" BorderBrush="#FFC5B406" Foreground="#FF3D4007" Background="#FFDECF37" Click="button_Click"/>
        <Viewbox>
            <TextBlock x:Name="hits" Margin="315,279,474,0" Text="0" TextWrapping="Wrap"  HorizontalAlignment="Left"  FontSize="20" Foreground="Lime"/>
        </Viewbox>
        <Viewbox>
            <TextBlock x:Name="fails" Margin="474,279,315,0" Text="0" TextWrapping="Wrap" HorizontalAlignment="Left" FontSize="20" Foreground="Red"/>
        </Viewbox>

    </Grid>
</Window>